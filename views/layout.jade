  body
    div(data-role='page')
      div#navigationPanel(data-role='panel')
        a(href='/').ui-btn.ui-btn-icon-left.ui-icon-home Home
        a(href='/pantry').ui-btn.ui-btn-icon-left.ui-icon-star Pantry
        a.ui-btn.ui-btn-icon-left.ui-icon-shop Grocery List
        a.ui-btn.ui-btn-icon-left.ui-icon-heart Receipts

      div(data-role='header')
          a.ui-btn-left.ui-btn.ui-btn-inline.ui-btn-mini.ui-btn-icon-left.ui-icon-bars(href='#navigationPanel') Menu
