          a.ui-btn-right.ui-btn.ui-btn-inline.ui-btn-mini.ui-btn-icon-right.ui-icon-user(href='') Sign in
        div(data-role='content')
        div(data-role='footer', data-position='fixed')
          h6 Created @ Angelhack
      .ui-content(role='main')
        block content
      div(data-role='footer') 


